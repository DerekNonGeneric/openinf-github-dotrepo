# The root EditorConfig file.
root = true

# Base ruleset for all files.
[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_size = 2
indent_style = space
max_line_length = 80
trim_trailing_whitespace = true

[**.md]
# Trailing whitespace is significant in Markdown.
trim_trailing_whitespace = false
